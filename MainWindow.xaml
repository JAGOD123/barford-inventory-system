<Window x:Class="Barford_Inventory_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Barford_Inventory_System"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920"
        Background="#181735">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid x:Name="g_Header"
              Background="#0f0f2d">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="240"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btn_AddItem" 
                    Style="{StaticResource BasicButton}"
                    Grid.Column="1" 
                    Content="Add Item" 
                    Click="btn_AddItem_Click"/>
            <Button x:Name="btn_RemoveItem" 
                    Style="{StaticResource BasicButton}"
                    Grid.Column="2" 
                    Content="Remove Item" 
                    Click="btn_RemoveItem_Click"/>
        </Grid>
        
        
        
    </Grid>
</Window>
